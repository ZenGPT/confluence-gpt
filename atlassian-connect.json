{
    "key": "gptdock-confluence",
    "name": "GPTDock for Confluence",
    "description": "GPT based assistant for Confluence",
    "baseUrl": "{{localBaseUrl}}",
    "authentication": {
        "type": "jwt"
    },
    "lifecycle": {
        "installed": "/installed"
    },
    "scopes": [
        "READ"
    ],
    "apiMigrations":{
        "signed-install": true
    },
    "modules": {
        "contentBylineItems": [
            {
                "context": "addon",
                "target": {
                    "type": "inlinedialog"
                },
                "tooltip": {
                    "value": "AI Aide"
                },
                "icon": {
                    "url": "/images/ai-aide-logo.png"
                },
                "name": {
                    "value": "Aide"
                },
                "key": "byline-item",
                "url": "/hello-world?contentId={content.id}"
            }
        ],
        "generalPages": [
            {
                "key": "hello-world-page-jira",
                "location": "system.top.navigation.bar",
                "name": {
                    "value": "Hello World"
                },
                "url": "/hello-world",
                "conditions": [{
                    "condition": "user_is_logged_in"
                }]
            },
            {
                "key": "hello-world-page-confluence",
                "location": "system.header/left",
                "name": {
                    "value": "Hello World"
                },
                "url": "/hello-world",
                "conditions": [{
                    "condition": "user_is_logged_in"
                }]
            }
        ]
    }
}
